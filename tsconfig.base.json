{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hammer/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@hammer/shared/angular/ui": ["libs/shared/angular/ui/src/index.ts"],
      "@hammer/shared/angular/feature": [
        "libs/shared/angular/feature/src/index.ts"
      ],
      "@hammer/shared/angular/util": ["libs/shared/angular/util/src/index.ts"],
      "@hammer/shared/angular/data-access": [
        "libs/shared/angular/data-access/src/index.ts"
      ],
      "@hammer/shared/nest/data-access": [
        "libs/shared/nest/data-access/src/index.ts"
      ],
      "@hammer/shared/nest/util": ["libs/shared/nest/util/src/index.ts"],
      "@hammer/shared/nest/feature": ["libs/shared/nest/feature/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
